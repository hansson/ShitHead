<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/light_gray">

    <ProgressBar
            android:id="@+id/progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:indeterminate="true"
            android:indeterminateBehavior="cycle"
            android:indeterminateOnly="true"
            android:visibility="gone"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_alignParentTop="true"
            android:layout_above="@id/quick"
            >

        <TextView
                android:id="@+id/active_games_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textColor="@color/black"
                android:layout_marginTop="8dp"
                android:text="@string/active_games"/>

        <ScrollView
                android:id="@+id/active_games_scroll"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <LinearLayout
                    android:id="@+id/active_games"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
            </LinearLayout>
        </ScrollView>


    </LinearLayout>


    <Button
            android:id="@+id/quick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="quickGameListener"
            android:text="@string/quick_game"
            android:textSize="18sp"
            android:background="@drawable/std"
            android:layout_above="@id/custom"
            android:padding="15dp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"/>

    <Button
            android:id="@+id/custom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="customGameListener"
            android:textSize="18sp"
            android:text="@string/custom_game"
            android:background="@drawable/std"
            android:layout_above="@id/bottom_container"
            android:padding="15dp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            />

    <RelativeLayout
            android:id="@+id/bottom_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">
        <Button
                android:id="@+id/how_to_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="howToPlayListener"
                android:layout_marginBottom="1dp"
                android:padding="20dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/help"/>

        <Button
                android:id="@+id/friends"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:onClick="friendsListener"
                android:layout_toLeftOf="@id/how_to_play"
                android:padding="20dp"
                android:background="@drawable/friends"/>

        <Button
                android:id="@+id/settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:onClick="friendsListener"
                android:layout_toRightOf="@id/how_to_play"
                android:padding="20dp"
                android:background="@drawable/settings"/>

    </RelativeLayout>



</RelativeLayout>
